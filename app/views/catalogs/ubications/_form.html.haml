= form_for(@catalogs_ubication) do |f|
  - if @catalogs_ubication.errors.any?
    #error_explanation
      %h2
        = pluralize(@catalogs_ubication.errors.count, "error")
        prohibited this catalogs_ubication from being saved:
      %ul
        - @catalogs_ubication.errors.full_messages.each do |msg|
          %li= msg

  %table{ :width => '950', :border => '1', :cellspacing => '0'}
    %tr.tbl_content
      %td.tbl_row_header{:width => '110'} Abrev.:
      %td= f.text_field :abbr, :size => '15'

    %tr.tbl_content
      %td.tbl_row_header{:width => '110'} Nombre:
      %td= f.text_field :name

    %tr.tbl_content
      %td.tbl_row_header{:width => '110'} Responsable:
      %td= f.text_field :responsible

    %tr.tbl_content
      %td.tbl_row_header{:width => '110'} Tel./ext.:
      %td= f.text_field :tel_ext, :size => '15'

  %br &nbsp;

  .actions
    = f.submit 'Guardar aula'