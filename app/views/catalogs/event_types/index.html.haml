%h1.cat_title Tipos de Eventos
%table{ :width => '950', :border => '1', :cellspacing => '0'}
  %tr.tbl_header
    %th Abrev.
    %th Nombre
    %th
    %th
    %th
  - @catalogs_event_types.each do |catalogs_event_type|
    %tr.tbl_content
      %td= catalogs_event_type.abbr
      %td= catalogs_event_type.name
      %td{ :align => 'center'}= link_to 'Ver', catalogs_event_type
      %td{ :align => 'center'}= link_to 'Editar', edit_catalogs_event_type_path(catalogs_event_type)
      %td{ :align => 'center'}= link_to 'Borrar', catalogs_event_type, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'Nuevo tipo de evento', new_catalogs_event_type_path